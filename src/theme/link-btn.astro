---
interface Props {
    link: string;
    disabled: boolean;
}

const {link, disabled} = Astro.props
---
<a 
    href={link}
    class:list={['link-btn', `text-base-1 text-white-light font-bold capitalize 
    bg-black-light [&:not(.disabled)]:hover:bg-black-dark 
    px-3 py-1 rounded-md 
    shadow-base
    transition duration-300 ease-in-out`, {disabled}]}
>
    <slot />
</a>